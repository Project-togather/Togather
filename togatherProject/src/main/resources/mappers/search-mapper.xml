	 <!-- 임시 -->
	 <select id="searchListCount" resultType="_int">
		SELECT COUNT(*)
			FROM class c
			JOIN attachment ON c_no = ref_fno
			WHERE c.status = 'Y'
			AND c.c_title LIKE '%' || #{keyword} || '%'
			<if test="options == 1">
			  AND c.cl_type = 1
			</if>
			<if test="options == 2">
			  AND c.cl_type = 2
			</if>
			<if test="options == 3">
			  AND c.cl_type = 3
			</if>
			<if test="sorting == 4">
		     AND c.c_location = '온라인'
		    </if>
		    <if test="sorting == 5">
		     AND c.c_location != '온라인'
		    </if>
		    <if test="category == 1">
			  AND c.cl_category = 1
			</if>
			<if test="category == 2">
			  AND c.cl_category = 2
			</if>
			<if test="category == 3">
			  AND c.cl_category = 3
			</if>
			<if test="category == 4">
    		AND c.cl_category = 4
  			</if>
  			<if test="category == 5">
    		AND c.cl_category = 5
  			</if>
  			<if test="category == 6">
    		AND c.cl_category = 6
  			</if>
  			<if test="category == 7">
    		AND c.cl_category = 7
  			</if>
  			<if test="category == 8">
    		AND c.cl_category = 8
  			</if>
  			<if test="dateValue != null">
			  AND c.c_date = #{dateValue}
			</if>
			order by c_no desc
	</select>
	
